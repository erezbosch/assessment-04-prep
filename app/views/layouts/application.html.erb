<!DOCTYPE html>
<html>
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<% if current_user %>
  <p>Welcome, <%= current_user.username %></p>
  <%= button_to 'Sign Out', session_url, method: :delete %>
<% else %>
<% end %>
<%= yield %>

</body>
</html>
